{
  "name": "mylonia/site-guard",
  "description": "Guard your website from visitors by requiring a password.",
  "type": "laravel-package",
  "require": {
    "php": "^8.4",
    "laravel/framework": "^11.0|^12.0",
    "laravel/pint": "^1.24"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "orchestra/testbench": "^9.0",
    "mockery/mockery": "^1.6",
    "rector/rector": "^2.0",
    "driftingly/rector-laravel": "^2.0",
    "larastan/larastan": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "Mylonia\\SiteGuard\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mylonia\\SiteGuard\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mylonia\\SiteGuard\\SiteGuardServiceProvider"
      ]
    }
  },
  "scripts": {
    "verify": ["@larastan", "@rector", "@pint", "@test"],
    "larastan": "./vendor/bin/phpstan analyse",
    "rector": "vendor/bin/rector",
    "rector-dry": "vendor/bin/rector --dry-run",
    "pint": "vendor/bin/pint",
    "test": "vendor/bin/phpunit"
  }
}
